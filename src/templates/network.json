{
    "width": 600,
    "height": 600,
    "x": 50,
    "y": 10,
    
    "data": [
        {
            "name": "data",
            "url": "[fileUrl]",
            "transform": [
                {"type": "addIndex","as": "id"}
            ]
        }
    ],

    "parameters": [
        {
            "name": "selected_node",
            "action": "replace",
            "network": "network",
            "type": "selection"
        },
        {
            "name": "outlinks",
            "source": "selected_node",
            "network": "network",
            "transform": [
            {"type": "connectedEdges"}
        ]
        },
        {
            "name": "neighbours",
            "source": "selected_node",
            "transform": [
                { "type": "neighbours", "direction": "both" }
            ]
            }
    ],

    "networks": [
        {
            "name": "network",
            "parts": [
                {"data": "data",
                    "yieldsLinks": [
                        {"source_id": {"field": "From Node (Short Name)"},
                         "source_node_type": "node",
                         "source_id_field": "id",
                         "target_id": {"field": "To Node Name"},
                         "target_node_type": "node",
                         "target_id_field": "id",
                         "data": [ "*"]
                        }
                    ],
                    "yieldsNodes": [
                        {"id_field": "From Node (Short Name)",
                        "type": "node",
                        "data": [{"field": "From Node Type","as": "node_type"},
                                {"field": "From Node Type", "as": "node_type_color"},
                                {"field": "From Node (Short Name)","as": "name"},
                                {"field": "PP","as": "Peace"},
                                {"field": "date", "as": "node_time"}]},
                                
                        {"id_field": "To Node Name",
                        "type": "node",
                        "data": [{"field": "To Node Type","as": "node_type"},
                                {"field": "To Node Sub-Type", "as": "node_type_color"},
                                {"field": "To Node Name","as": "name"}
                                ]}
                    ]
                }
            ],
            "transform": [
                {"type": "filterEdges", "expression": "datum.data.PP == [peaceProcess]"},
                {"type": "removeIsolated"}
            ]
        }
    ],

    "layouts": [
        {
            "name": "layout",
            "network": "network",
            "type": "d3-force"
        }
    ],
    "scales": [
        {
            "name": "nodeColor",
            "type": "ordinal",
            "range": [
                "#D97144",
                "#568AA4",
                "#60A18B",
                "#335B60",
                "#EAC05B",
                "#CDD2CC",
                "#F3F2D7",
                "#B16748",
                "#7FAADC",
                "#9EB449",
                "#714FBA",
                "#E8A5D5"
            ],
            "domain": [
                "Peace Process",
                "Armed Group",
                "Peace Agreement",
                "IGO",
                "Country/State",
                "State Coalition",
                "Region",
                "Other",
                "Political Party",
                "Political Party/Armed Group",
                "UN Mission",
                "Entity"
            ]
        },
        {
            "name": "edgeColor",
            "type": "ordinal",
            "range": ["#C1C1C1","lightgrey"],
            "domain": ["party","third party"]
        },
        {
            "name": "edgeWidth",
            "type": "ordinal",
            "range": [2.5,0.8],
            "domain": ["party","third party"]
        },
        {
            "name": "shape",
            "type": "ordinal",
            "domain": ["Peace Agreement","Entity","Peace Process"],
            "range": ["square","circle","triangle"]
        }
    ],
    "vis": [
         
        {
            "entries": "network.links",
            "layout": "layout",
            "mark": {
                "type": "linkpath",
                "start": "source",
                "end": "target",
                "strokeWidth": {"field":"data.Edge", "scale":"edgeWidth"},
                "stroke": {"field":"data.Edge", "scale":"edgeColor"},
                "opacity": {
                    "conditions": [
                        {"inSelection": "outlinks.links","value": 1},
                        {"selectionIsEmpty": "outlinks.links","value": 1}
                        ],
                   "value": 0.5
                 }
            }
        },
        {
            "entries": "network.links",
            "layout": "layout",
            "ifInSelection": "outlinks.links",
            "mark": {
                "type": "linkpath",
                "start": "source",
                "end": "target",
                "stroke": "#FF7F0E",
                "strokeWidth": {"field":"data.Edge", "scale":"edgeWidth"}
            }
        },
        {
            "entries": "network.nodes",
            "layout": "layout",
            "actions": [
                {
                "interaction": "select",
                "using": "cursor",
                "event": "click",
                "action": "replace",
                "selection": "selected_node"
                }
            ],
            "mark": {
                "type": "symbol",
                "shape": {"field": "data.node_type", "scale": "shape"},
                "area": { "expression": "datum.data.node_type == 'Peace Agreement' ? 400 : 250"},
                "fill": {
                    "field": "data.node_type_color",
                    "scale": "nodeColor"
                },
                "tooltip": {
                    "field": "data.name"
                },
                "opacity": {
                    "conditions": [
                        {"inSelection": "selected_node.nodes","value": 1},
                        {"inSelection": "neighbours.nodes","value": 1},
                        {"selectionIsEmpty": "selected_node.nodes","value": 1}
                        ],
                   "value": 0.2
                 }
            }
        },
        {
            "entries": "network.nodes",
            "layout": "layout",
            "ifInSelection": "selected_node.nodes",
            "mark": {
                "type": "text",
                "text": {"field": "id"},
                "fontSize": 14,
                "fontWeight": 600,
                "align": "left",
                "fill": "black",
                "dx": 10,
                "dy":3
                }
        },
        {
            "entries": "network.nodes",
            "layout": "layout",
            "ifInSelection": "neighbours.nodes",
            "mark": {
                "type": "text",
                "text": {"field": "id"},
                "fontSize": 14,
                "fontWeight": 500,
                "align": "left",
                "fill": "black",
                "dx": 15,
                "dy":3
                }
        }
    ]
}
