{
    "width": "[autoWidth]",
    "height": "[autoHeight]",
    "x": 20,
    "y": 20,
    
    "data": [
        {
            "name": "data",
            "url": "[fileUrl]",
            "transform": [
                {"type": "addIndex","as": "id"}
            ]
        }
    ],

    "parameters": [
        {
            "name": "selected_node",
            "action": "replace",
            "network": "network",
            "type": "selection",
            "clearOnBackgroundClick": true
        },
        {
            "name": "outlinks",
            "source": "selected_node",
            "network": "network",
            "transform": [
            {"type": "connectedEdges"}
        ]
        },
        {
            "name": "neighbours",
            "source": "selected_node",
            "transform": [
                { "type": "neighbours", "direction": "both" }
            ]
            }
    ],

    "networks": [
        {
            "name": "network",
            "parts": [
                {"data": "data",
                    "yieldsLinks": [
                        {"source_id": {"field": "From Node (Full Name)"},
                         "source_node_type": "node",
                         "source_id_field": "id",
                         "target_id": {"field": "To Node Name"},
                         "target_node_type": "node",
                         "target_id_field": "id",
                         "data": [ "*"]
                        }
                    ],
                    "yieldsNodes": [
                        {"id_field": "From Node (Full Name)",
                        "type": "node",
                        "data": [{"field": "From Node Type","as": "node_type"},
                                {"field": "From Node Type", "as": "node_type_color"},
                                {"field": "From Node (Short Name)","as": "name"},
                                {"field": "From Node (Full Name)","as": "fullName"},
                                {"field": "PP","as": "Peace"},
                                {"field": "date", "as": "node_time"}]},
                                
                        {"id_field": "To Node Name",
                        "type": "node",
                        "data": [{"field": "To Node Type","as": "node_type"},
                                {"field": "To Node Sub-Type", "as": "node_type_color"},
                                {"field": "To Node Name","as": "name"}
                                ]}
                    ]
                }
            ],
            "transform": [
                {"type": "filterEdges", "expression": "datum.data.PP == [peaceProcess]"},
                {"type": "removeIsolated"}
            ]
        }
    ],

    "layouts": [
        {
            "name": "layout-discarded",
            "network": "network",
            "type": "d3-force",
            "normalizeX": [
                0,
                500
            ],
            "normalizeY": [
                0,
                500
            ],
            "forces": [
               {
                "force": "link"
               },
                {
                    "force": "nbody",
                    "strength": -15,
                    "theta": 1.2,
                    "distanceMin": 1
                }
            ]
        },
        {
            "name": "layout",
            "network": "network",
            "type": "d3-force"
        }
    ],
    "scales": [
        {
            "name": "nodeColor",
            "type": "ordinal",
            "range": [
                "#60A18B",
                "#EAC05B",
                "#D97144",
                "#E8A5D5",
                "#7FAADC",
                "#714FBA",
                "#9EB449",
                "#CEAC9D",
                "#F6F5BF",
                "#568AA4",
                "#CDD2CC"
            ],
            "domain": [
                "Peace Agreement",
                "Country/State",
                "Entity",
                "IGO",
                "NGO",
                "Political Party",
                "Armed Organization",
                "Military",
                "State Coalition",
                "Umbrella",
                "Other"
            ]
        },
        {
            "name": "edgeColor",
            "type": "ordinal",
            "range": ["#C1C1C1","lightgrey"],
            "domain": ["party","third party"]
        },
        {
            "name": "edgeWidth",
            "type": "ordinal",
            "range": [1.8, 0.8],
            "domain": ["party","third party"]
        },
        {
            "name": "shape",
            "type": "ordinal",
            "domain": ["Peace Agreement","Entity","Peace Process"],
            "range": ["square","circle","triangle"]
        }
    ],
    "vis": [
        {
            "entries": "network.links",
            "layout": "layout",
            "mark": {
                "type": "linkpath",
                "start": "source",
                "end": "target",
                "strokeWidth": {"field":"data.Edge", "scale":"edgeWidth"},
                "stroke": {"field":"data.Edge", "scale":"edgeColor"},
                "opacity": {
                    "conditions": [
                        {"inSelection": "outlinks.links","value": 1},
                        {"selectionIsEmpty": "outlinks.links","value": 1}
                        ],
                   "value": 0.5
                 }
            }
        },
        {
            "entries": "network.links",
            "layout": "layout",
            "ifInSelection": "outlinks.links",
            "mark": {
                "type": "linkpath",
                "start": "source",
                "end": "target",
                "stroke": "#FF7F0E",
                "strokeWidth": {"field":"data.Edge", "scale":"edgeWidth"}
            }
        },
        {
            "entries": "network.nodes",
            "layout": "layout",
            "actions": [
                {
                "interaction": "select",
                "using": "cursor",
                "event": "click",
                "action": "replace",
                "selection": "selected_node"
                }
            ],
            "mark": {
                "type": "symbol",
                "shape": {"field": "data.node_type", "scale": "shape"},
                "area": { "expression": "datum.data.node_type == 'Peace Agreement' ? 350 : 250"},
                "fill": {
                    "field": "data.node_type_color",
                    "scale": "nodeColor"
                },
                "stroke": "black",
                "strokeWidth": {"expression": "datum.data.name == 'United Kingdom' ? 2 : 0"},
                "tooltip": {
                    "expression": "datum.data.node_type == 'Peace Agreement' ? {Name: datum.data.fullName, Date: datum.data.node_time} : {Name: datum.id}"
                },
                "opacity": {
                    "conditions": [
                        {"inSelection": "selected_node.nodes","value": 1},
                        {"inSelection": "neighbours.nodes","value": 1},
                        {"selectionIsEmpty": "selected_node.nodes","value": 1}
                        ],
                   "value": 0.2
                 }
            }
        },
        {
            "entries": "network.nodes",
            "layout": "layout",
            "mark": {
                "type": "text",
                "text": {"expression": "datum.data.name == 'United Kingdom' ? 'United Kingdom' : ' '"},
                "fontSize": 14,
                "fontWeight": 500,
                "limit": 300,
                "align": "left",
                "fill": "black",
                "dx": 10,
                "dy":3
                }
        },
        {
            "entries": "network.nodes",
            "layout": "layout",
            "ifInSelection": "selected_node.nodes",
            "mark": {
                "type": "text",
                "text": {"field": "id"},
                "fontSize": 14,
                "fontWeight": 500,
                "limit": 300,
                "align": "left",
                "fill": "black",
                "dx": 10,
                "dy":3
                }
        },
        {
            "entries": "network.nodes",
            "layout": "layout",
            "ifInSelection": "neighbours.nodes",
            "mark": {
                "type": "text",
                "text": {"field": "id"},
                "fontSize": 14,
                "fontWeight": 500,
                "limit": 300,
                "align": "left",
                "fill": "black",
                "dx": 10,
                "dy":3
            }
        }
    ]
}
