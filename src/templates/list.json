{
    
    "height": 450,
    "width": 400,
    "x": 130,

    "data": [
        {
            "name": "data",
            "url": "[fileUrl]",
            "transform": [
                {"type": "addIndex","as": "id"}
            ]
        }
    ],
    
    "networks": [
        {
            "name": "network",
            "parts": [
                {"data": "data",
                    "yieldsLinks": [
                        {"source_id": {"field": "From Node (Short Name)"},
                         "source_node_type": "node",
                         "source_id_field": "id",
                         "target_id": {"field": "To Node Name"},
                         "target_node_type": "node",
                         "target_id_field": "id",
                         "data": [ "*"]
                        }
                    ],
                    "yieldsNodes": [
                        {"id_field": "From Node (Short Name)",
                        "type": "node",
                        "data": [{"field": "From Node Type","as": "node_type"},
                                {"field": "From Node Type", "as": "node_type_color"},
                                {"field": "From Node (Short Name)","as": "name"},
                                {"field": "PP","as": "Peace"},
                                {"field": "date", "as": "node_time"}]},
                                
                        {"id_field": "To Node Name",
                        "type": "node",
                        "data": [{"field": "To Node Type","as": "node_type"},
                                {"field": "To Node Sub-Type", "as": "node_type_color"},
                                {"field": "To Node Name","as": "name"}
                                ]}
                    ]
                }
            ],
            "transform": [
                {"type": "filterEdges", "expression": "datum.data.PP == [peaceProcess]"},
                {"type": "removeIsolated"}
            ]
        }
    ],

    "groupings": [
        {
            "name": "groupedBySource",
            "data": "network.links",
            "common": [
                "source.id"
            ]
        }
    ],

    "orderings": [
        {
            "name": "order",
            "data": "groupedBySource",
            "orderBy": {
                "field": "data[0].source.data.node_time",
                "direction": "ascending"
            }
        }
    ],

    "layouts": [
        {
            "name": "list",
            "data": "groupedBySource",
            "pattern": "cartesian",
            "y": [{"order": "order"}],
            "x": [ {"value": 0} ],
            "positioning": "end"
        }
    ],

    "scales": [
        {
            "name": "nodeColor",
            "type": "ordinal",
            "range": [
                "#D97144",
                "#568AA4",
                "#60A18B",
                "#335B60",
                "#EAC05B",
                "#CDD2CC",
                "#F3F2D7",
                "#B16748",
                "#7FAADC",
                "#9EB449",
                "#714FBA",
                "#E8A5D5"
            ],
            "domain": [
                "Peace Process",
                "Armed Group",
                "Peace Agreement",
                "IGO",
                "Country/State",
                "State Coalition",
                "Region",
                "Other",
                "Political Party",
                "Political Party/Armed Group",
                "UN Mission",
                "Entity"
            ]
        }
    ],

    "vis": [
        {
            "entries": "groupedBySource",
            "layout": "list",
            "mark": {
                "type": "text",
                "text": {
                    "field": "data[0].source.data.name"
                },
                "x": -10,
                "dy": 3,
                "limit": 120,
                "fill": "black",
                "align": "right"
            }
        },
        {
            "entries": "groupedBySource",
            "layout": "list",

            "orderings": [
                {
                "name": "order_by_id",
                "data": "entry.data",
                "orderBy": [ {  "field": "id"  }  ]
                }
            ],

            "layouts": [
                {
                "name": "list2",
                "data": "entry.data",
                "pattern": "row-by-row",
                "numCols": 25,
                "order": { "order": "order_by_id"  }
                }
            ],

            "vis": [
                {
                "entries": "entry.data",
                "layout": "list2",
                "mark": {
                        "type": "circle",
                        "fill": {
                            "field": "target.data.node_type_color",
                            "scale": "nodeColor"
                        },
                        "area": 250
                    }
                }
            ]
            
        }
    ]


   
}